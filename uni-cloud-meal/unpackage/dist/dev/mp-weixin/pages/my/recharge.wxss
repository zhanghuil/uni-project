.contenter {
  height: 100vh;
  position: relative;
  padding: 32rpx 40rpx;
}
.contenter .cardItem {
  height: 240rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  position: relative;
  background-image: -webkit-gradient(linear, left top, right top, from(#9FD9C7), to(#6ECCAE));
  background-image: -webkit-linear-gradient(left, #9FD9C7 0%, #6ECCAE 100%);
  background-image: linear-gradient(90deg, #9FD9C7 0%, #6ECCAE 100%);
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
}
.contenter .cardItem .bg-img {
  position: absolute;
  width: 184rpx;
  height: 148rpx;
  right: 0;
  bottom: 0;
}
.contenter .cardItem .cardTxt {
  position: relative;
  z-index: 1;
}
.contenter .cardItem .f20 {
  font-size: 40rpx;
}
.contenter .cardItem .f30 {
  font-size: 60rpx;
}
.contenter .cardItem .txt {
  padding-bottom: 18rpx;
}
.contenter .cardItem .tips {
  font-size: 24rpx;
  color: #FF4D23;
  opacity: 0.9;
  background: #FFFFFF;
  -webkit-border-radius: 4rpx;
          border-radius: 4rpx;
  padding: 8rpx 24rpx;
}
.contenter .inputBox {
  margin: 80rpx 0 64rpx;
  padding: 0 32rpx;
  background: #FAFAFA;
  -webkit-border-radius: 50rpx;
          border-radius: 50rpx;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.contenter .inputBox .unit {
  font-size: 36rpx;
  color: #2A2A2A;
  margin-right: 32rpx;
}
.contenter .inputBox .ipt {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 52rpx;
  font-size: 52rpx;
  line-height: 52rpx;
  color: #2A2A2A;
}
.contenter .rechargeBtn .cu-btn {
  padding: 0 128rpx;
  font-size: 32rpx;
  color: #fff;
  height: 80rpx;
}
.contenter .rechargeBtn .cu-btn.bg-gray {
  background: #C0C0C0;
}
.contenter .footBox {
  text-align: center;
  font-size: 28rpx;
  color: #C0C0C0;
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 64rpx;
}

