page {
  background: #FFFFFF;
}
.header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 24rpx 40rpx;
}
.header .imgBox {
  width: 140rpx;
  height: 140rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  margin-right: 24rpx;
}
.header .imgBox .img {
  width: 100%;
  height: 100%;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.header .desc {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 28rpx;
  color: #6A6A6A;
}
.header .desc .name {
  font-size: 18px;
  color: #2A2A2A;
}
.header .desc .edit {
  font-size: 26rpx;
  color: #4EC09B;
}
.header .desc .hos {
  padding-top: 14rpx;
}
.card-menu {
  padding: 0 40rpx 32rpx;
}
.card-menu .cu-item {
  margin-bottom: 32rpx;
  background: #FAFAFA;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  padding: 20rpx 32rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 28rpx;
  color: #4A4A4A;
  position: relative;
}
.card-menu .cu-item .txt {
  line-height: 2;
}
.card-menu .cu-item .img {
  width: 72rpx;
  height: 84rpx;
  margin-top: 14rpx;
}
.card-menu .cu-item:nth-child(2), .card-menu .cu-item:nth-child(3) {
  background-image: -webkit-gradient(linear, left top, right top, from(#9FD9C7), to(#6ECCAE));
  background-image: -webkit-linear-gradient(left, #9FD9C7 0%, #6ECCAE 100%);
  background-image: linear-gradient(90deg, #9FD9C7 0%, #6ECCAE 100%);
  color: #FFFFFF;
  line-height: 1.8;
}
.card-menu .cu-item:nth-child(2) .bg-img, .card-menu .cu-item:nth-child(3) .bg-img {
  position: absolute;
  width: 184rpx;
  height: 148rpx;
  right: 0;
  bottom: 0;
}
.card-menu .cu-item:nth-child(2) .cardTxt .L, .card-menu .cu-item:nth-child(3) .cardTxt .L {
  font-size: 32rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.card-menu .cu-item:nth-child(2) .cardTxt .L .cuIcon-right, .card-menu .cu-item:nth-child(3) .cardTxt .L .cuIcon-right {
  margin-left: 8rpx;
}
.card-menu .cu-item:nth-child(3) {
  background-image: -webkit-gradient(linear, left top, right top, from(#A2B9E4), to(#7E9FDB));
  background-image: -webkit-linear-gradient(left, #A2B9E4 0%, #7E9FDB 100%);
  background-image: linear-gradient(90deg, #A2B9E4 0%, #7E9FDB 100%);
  color: #FFFFFF;
  line-height: 1.8;
}

