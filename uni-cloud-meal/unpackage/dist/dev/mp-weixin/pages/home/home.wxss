page {
  background: #FFFFFF;
}
.response {
  -webkit-filter: blur(4px);
          filter: blur(4px);
  height: 160rpx;
}
.topWrapper {
  width: 100%;
  height: 96rpx;
  position: relative;
}
.homeTop {
  background: #FFFFFF;
  -webkit-box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.05);
          box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.05);
  -webkit-border-radius: 12rpx;
          border-radius: 12rpx;
  margin: 0 28rpx;
  padding: 32rpx;
  font-size: 36rpx;
  color: #2A2A2A;
  position: absolute;
  top: -95rpx;
}
.homeTop .logoImg {
  width: 120rpx;
  height: 120rpx;
  -webkit-border-radius: 4rpx;
          border-radius: 4rpx;
  background: #EFA720;
}
.homeTop .logoImg .img {
  width: 120rpx;
  height: 120rpx;
  -webkit-border-radius: 4rpx;
          border-radius: 4rpx;
}
.homeTop .R {
  width: calc(100% - 120rpx);
  padding-left: 24rpx;
}
.homeTop .R .phoneCon {
  position: relative;
  padding-left: 30rpx;
}
.homeTop .R .phoneCon::after {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 2rpx;
  height: 40rpx;
  background: #E8E8E8;
}
.homeTop .R .phoneCon .pimg {
  width: 32rpx;
  height: 32rpx;
}
.homeTop .R .notice {
  padding-top: 18rpx;
  font-size: 22rpx;
  color: #6A6A6A;
}
.homeTop .R .notice .nimg {
  margin-right: 8rpx;
  width: 36rpx;
  height: 36rpx;
}
.dateCard {
  padding: 30rpx 0 32rpx 18rpx;
}
.dateCard .cu-item {
  height: auto;
  line-height: normal;
  font-size: 26rpx;
  color: #4EC09B;
  border: 2rpx solid #4EC09B;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  padding: 11rpx 20rpx;
}
.dateCard .cu-item .week {
  padding-left: 8rpx;
}
.dateCard .cu-item.cur {
  border-bottom: none;
  background: #4EC09B;
  color: #FFFFFF;
}
.mealTimes .cu-item {
  height: 62rpx;
  line-height: 62rpx;
  font-size: 32rpx;
  margin: 0 30rpx 0 10rpx;
  color: #5a5959;
  position: relative;
}
.mealTimes .cu-item.cur {
  color: #000;
  border-bottom: none;
  position: relative;
}
.mealTimes .cu-item.cur::after {
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -20rpx;
  content: '';
  width: 40rpx;
  height: 6rpx;
  background: #4EC09B;
  -webkit-border-radius: 3rpx;
          border-radius: 3rpx;
}

